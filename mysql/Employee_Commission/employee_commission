SELECT Employees.id,Employees.Name,Employees.Salary,Departments.name
FROM Employees
JOIN Departments
ON Departments.id=Employees.Department_id;

1. SELECT Employees.Name 
   FROM Employees 
   JOIN Commissions 
   ON Employees.id=Commissions.Employee_id  
   GROUP BY Commissions.Employee_id 
   ORDER BY SUM(Commissions.Commission_Amount) DESC 
   LIMIT 0,1;

2. SELECT Name 
   From Employees 
   ORDER BY salary DESC 
   LIMIT 3,1;

3. SELECT Departments.Name 
   FROM Departments 
   JOIN Employees 
   ON Departments.id=Employees.Department_id 
   JOIN Commissions 
   ON Employees.id=Commissions.Employee_id 
   GROUP BY Employees.Department_id 
   ORDER BY SUM(Commissions.Commission_Amount) DESC 
   LIMIT 0,1;

4. SELECT Employees.Name, SUM(Commissions.Commission_Amount) 
   FROM Employees 
   JOIN Commissions 
   ON Employees.id=Commissions.Employee_id  
   WHERE Commissions.Commission_Amount>3000 
   GROUP BY Commissions.Employee_id 
   ORDER BY SUM(Commissions.Commission_Amount) DESC;

